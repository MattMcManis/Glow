            <Button x:Name="buttonSave"
                    Margin="241,0,364,16" 
                    Cursor="Hand" 
                    Height="22"
                    MinWidth="75"
                    MaxWidth="75"
                    VerticalAlignment="Bottom"
                    Click="buttonSave_Click" 
                    Style="{DynamicResource ButtonStyle}" 
                    >
                <TextBlock Text="Save" Margin="0,-2,0,0"/>
            </Button>


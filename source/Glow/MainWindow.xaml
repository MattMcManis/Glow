<Window x:Class="Glow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:System="clr-namespace:System;assembly=mscorlib" 
        xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero"
        xmlns:Themes1="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2" 
        xmlns:my="clr-namespace:Glow"
        xmlns:settings="clr-namespace:Glow.Properties"
                
        Loaded="Window_Loaded"
        Closing="Window_Closing" 
        UseLayoutRounding="True"
        Width="712" 
        Height="400"
    
        Title="{Binding TitleVersion, RelativeSource={RelativeSource Mode=Self}}" 
        Icon="Resources/Images/Icons/title-logo.ico"
        Style="{DynamicResource WindowStyle}" 
        >

    <Grid>
        <Grid Margin="0,0,-1,0">

            <!-- Main Tabs -->
            <TabControl Margin="0,10,11,54" 
                        HorizontalAlignment="Right" 
                        Width="245" 
                        Style="{DynamicResource TabControlStyle}">

                <!--/////////////////////////////////////
                    Video Tab
                /////////////////////////////////////-->
                <TabItem Header="Video" Style="{DynamicResource TabItemStyle}">
                    <Grid Background="Transparent">
                        <ScrollViewer Margin="0,0,0,0" Template="{DynamicResource ScrollViewerControlTemplate}">
                            <Grid Margin="0,0,0,30">

                                <!-- Driver -->
                                <Label Content="Driver"
                                       HorizontalAlignment="Left" 
                                       Margin="10,13,0,0" 
                                       Padding="0,0,0,6" 
                                       VerticalAlignment="Top"
                                       Width="75"
                                       ToolTipService.InitialShowDelay="100" 
                                       ToolTipService.ShowOnDisabled="True" 
                                       ToolTip="Specify the video output backend to be used. See VIDEO OUTPUT DRIVERS for details and descriptions of available drivers."
                                       Style="{DynamicResource LabelStyle}"/>
                                <ComboBox x:Name="cboVideoDriver" 
                                          ItemsSource="{Binding VideoDriver_Items}"
                                          SelectedIndex="{Binding VideoDriver_SelectedIndex}"
                                          SelectedItem="{Binding VideoDriver_SelectedItem}"
                                          IsEnabled="{Binding VideoDriver_IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Margin="0,10,14,0" 
                                          VerticalAlignment="Top"
                                          Style="{DynamicResource ComboBoxStyle}"
                                          ItemContainerStyle="{DynamicResource ComboBoxItemStyle}"
                                          SelectionChanged="cboVideoDriver_SelectionChanged"
                                          HorizontalAlignment="Right" 
                                          Width="103">
                                    <!--<System:String>opengl</System:String>
                                    <System:String>opengl-hq</System:String>
                                    <System:String>d3d11</System:String>
                                    <System:String>vulkan</System:String>-->
                                </ComboBox>

                                <!-- Driver API -->
                                <Label Content="Driver API"
                                       HorizontalAlignment="Left" 
                                       Margin="10,42,0,0" 
                                       Padding="0,0,0,6" 
                                       VerticalAlignment="Top"
                                       Width="75"
                                       ToolTipService.InitialShowDelay="100" 
                                       ToolTipService.ShowOnDisabled="True" 
                                       ToolTip="Specify the video output backend to be used. See VIDEO OUTPUT DRIVERS for details and descriptions of available drivers."
                                       Style="{DynamicResource LabelStyle}"/>
                                <ComboBox x:Name="cboVideoDriverAPI" 
                                          ItemsSource="{Binding VideoDriverAPI_Items}"
                                          SelectedIndex="{Binding VideoDriverAPI_SelectedIndex}"
                                          SelectedItem="{Binding VideoDriverAPI_SelectedItem}"
                                          IsEnabled="{Binding VideoDriverAPI_IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Margin="0,39,14,0" 
                                          VerticalAlignment="Top"
                                          Style="{DynamicResource ComboBoxStyle}"
                                          ItemContainerStyle="{DynamicResource ComboBoxItemStyle}"
                                          SelectionChanged="cboVideoDriverAPI_SelectionChanged"
                                          HorizontalAlignment="Right" 
                                          Width="103">
                                    <!--<System:String>opengl</System:String>
                                    <System:String>opengl-hq</System:String>
                                    <System:String>d3d11</System:String>
                                    <System:String>vulkan</System:String>-->
                                </ComboBox>

                                <!-- OpenGL PBO -->
                                <Label Content="OpenGL PBO"
                                       HorizontalAlignment="Left" 
                                       Margin="10,71,0,0" 
                                       Padding="0,0,0,6" 
                                       VerticalAlignment="Top"
                                       Width="75"
                                       ToolTipService.InitialShowDelay="1000" 
                                       ToolTipService.ShowOnDisabled="True" 
                                       ToolTip="Enable use of PBOs. On some drivers this can be faster, especially if the source video size is huge (e.g. so called &quot;4K&quot; video). On other drivers it might be slower or cause latency issues."
                                       Style="{DynamicResource LabelStyle}"/>
                                <ComboBox x:Name="cboOpenGLPBO" 
                                          ItemsSource="{Binding OpenGLPBO_Items}"
                                          SelectedIndex="{Binding OpenGLPBO_SelectedIndex}"
                                          SelectedItem="{Binding OpenGLPBO_SelectedItem}"
                                          IsEnabled="{Binding OpenGLPBO_IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          HorizontalAlignment="Right" 
                                          Margin="0,68,14,0" 
                                          VerticalAlignment="Top" 
                                          Width="103"
                                          Style="{DynamicResource ComboBoxStyle}"
                                          ItemContainerStyle="{DynamicResource ComboBoxItemStyle}" 
                                          SelectionChanged="cboOpenGLPBO_SelectionChanged">
                                    <!--<System:String>yes</System:String>
                                    <System:String>no</System:String>-->
                                </ComboBox>

                                <!-- OpenGL PBO Formats -->
                                <Label Content="PBO Formats"
                                       HorizontalAlignment="Left" 
                                       Margin="10,100,0,0" 
                                       Padding="0,0,0,6" 
                                       VerticalAlignment="Top"
                                       Width="75"
                                       ToolTipService.InitialShowDelay="1000" 
                                       ToolTipService.ShowOnDisabled="True" 
                                       ToolTip="Selects the internal format of textures used for FBOs. The format can influence performance and quality of the video output. fmt can be one of: rgb8, rgb10, rgb10_a2, rgb16, rgb16f, rgb32f, rgba12, rgba16, rgba16f, rgba32f. Default: auto, which maps to rgba16 on desktop GL, and rgba16f or rgb10_a2 on GLES (e.g. ANGLE), unless GL_EXT_texture_norm16 is available."
                                       Style="{DynamicResource LabelStyle}"/>
                                <ComboBox x:Name="cboOpenGLPBOFormat" 
                                          ItemsSource="{Binding OpenGLPBOFormat_Items}"
                                          SelectedIndex="{Binding OpenGLPBOFormat_SelectedIndex}"
                                          SelectedItem="{Binding OpenGLPBOFormat_SelectedItem}"
                                          IsEnabled="{Binding OpenGLPBOFormat_IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          HorizontalAlignment="Right" 
                                          Margin="0,97,14,0" 
                                          VerticalAlignment="Top" 
                                          Width="103"
                                          Style="{DynamicResource ComboBoxStyle}"
                                          ItemContainerStyle="{DynamicResource ComboBoxItemStyle}">
                                    <!--<System:String>default</System:String>
                                    <System:String>off</System:String>
                                    <System:String>rgb8</System:String>
                                    <System:String>rgb10</System:String>
                                    <System:String>rgb10_a2</System:String>
                                    <System:String>rgb16</System:String>
                                    <System:String>rgb16f</System:String>
                                    <System:String>rgb32f</System:String>
                                    <System:String>rgba12</System:String>
                                    <System:String>rgba16</System:String>
                                    <System:String>rgba16f</System:String>
                                    <System:String>rgba32f</System:String>-->
                                </ComboBox>

                                <!-- Hardware Decoder -->
                                <Label Content="HW Decoder" 
                                       HorizontalAlignment="Left" 
                                       Margin="10,129,0,0" 
                                       Padding="0, 0, 0, 6"
                                       VerticalAlignment="Top"
                                       Width="75"
                                       ToolTipService.InitialShowDelay="1000" 
                                       ToolTipService.ShowOnDisabled="True" 
                                       ToolTip="Specify the hardware video decoding API that should be used if possible. Whether hardware decoding is actually done depends on the video codec. If hardware decoding is not possible, mpv will fall back on software decoding."
                                       Style="{DynamicResource LabelStyle}"/>
                                <ComboBox x:Name="cboHWDecoder" 
                                          ItemsSource="{Binding HWDecoder_Items}"
                                          SelectedIndex="{Binding HWDecoder_SelectedIndex}"
                                          SelectedItem="{Binding HWDecoder_SelectedItem}"
                                          IsEnabled="{Binding HWDecoder_IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          HorizontalAlignment="Right"
                                          Margin="0,126,14,0" 
                                          VerticalAlignment="Top" 
                                          Width="103"
                                          Style="{DynamicResource ComboBoxStyle}"
                                          ItemContainerStyle="{DynamicResource ComboBoxItemStyle}">
                                    <!--<System:String>off</System:String>
                                    <System:String>no</System:String>
                                    <System:String>yes</System:String>
                                    <System:String>auto-copy</System:String>
                                    <System:String>dxva2</System:String>
                                    <System:String>dxva2-copy</System:String>
                                    <System:String>d3d11va</System:String>
                                    <System:String>d3d11va-copy</System:String>
                                    <System:String>cuda</System:String>
                                    <System:String>cuda-copy</System:String>
                                    <System:String>crystalhd</System:String>-->
                                </ComboBox>


                                <!--/////////////////////////////////////
                                     Display
                                    /////////////////////////////////////-->
                                <Label Content="Display" 
                                    HorizontalAlignment="Left" 
                                    Margin="10,170,0,0"
                                    Padding="0,0,0,6" 
                                    VerticalAlignment="Top" 
                                    Width="75" 
                                    FontWeight="Bold"
                                    Style="{DynamicResource LabelTitleStyle}"/>

                                <!-- ICC Profile -->
                                <Label x:Name="lbICCProfilePath"
                                       Content="ICC Profile"
                                       HorizontalAlignment="Left" 
                                       Margin="10,199,0,0"
                                       Padding="0,0,0,6" 
                                       VerticalAlignment="Top" 
                                       Width="75"
                                       ToolTipService.InitialShowDelay="100" 
                                       ToolTipService.ShowOnDisabled="True" 
                                       ToolTip="Load an ICC profile and use it to transform video RGB to screen output. Needs LittleCMS 2 support compiled in. This option overrides the  --target-prim, --target-trc and --icc-profile-auto options."
                                       Cursor="Hand"
                                       PreviewMouseDown="lbICCProfilePath_PreviewMouseDown"
                                       Style="{DynamicResource LabelStyle}"/>
                                <!--<TextBox x:Name="tbxICCProfilePath"
                                         HorizontalAlignment="Right" 
                                         Margin="0,132,14,0" 
                                         VerticalAlignment="Top" 
                                         Width="103"
                                         Height="22"
                                         Style="{DynamicResource TextBoxStyle}" 
                                         PreviewMouseDown="tbxICCProfilePath_PreviewMouseDown">
                                </TextBox>-->
                                <ComboBox x:Name="cboICCProfile" 
                                          ItemsSource="{Binding ICCProfile_Items}"
                                          SelectedIndex="{Binding ICCProfile_SelectedIndex}"
                                          SelectedItem="{Binding ICCProfile_SelectedItem}"
                                          IsEnabled="{Binding ICCProfile_IsEnabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Margin="0,196,14,0" 
                                          VerticalAlignment="Top"
                                          Style="{DynamicResource ComboBoxStyle}"
                                          ItemContainerStyle="{DynamicResource ComboBoxItemStyle}" 
                                          HorizontalAlignment="Right"
                                          Width="103" 
                                          SelectionChanged="cboICCProfile_SelectionChanged">
                                    <!--<System:String>default</System:String>
                                    <System:String>auto</System:String>
                                    <System:String>select</System:String>-->
                                </ComboBox>

                                <!-- Primaries -->
                                <Label Content="Primaries" 
                                       HorizontalAlignment="Left"
                                       Margin="10,228,0,0" 
                                       Padding="0,0,0,6" 
                                       VerticalAlignment="Top"
                                       Width="75"
                                       ToolTipService.InitialShowDelay="100" 
                                       ToolTipService.ShowOnDisabled="True" 
                                       ToolTip="Specifies the primaries of the display. Video colors will be adapted to this colorspace when ICC color management is not being used."
                                       Style="{DynamicResource LabelStyle}"/>
                                <ComboBox x:Name="cboDisplayPrimaries" 
                                          Margin="0,225,14,0" 
                                          VerticalAlignment="Top"
                                          Style="{DynamicResource ComboBoxStyle}"
                                          ItemContainerStyle="{DynamicResource ComboBoxItemStyle}" 
                                          HorizontalAlignment="Right"
                                          Width="103">
                                    <System:String>default</System:String>
                                    <System:String>auto</System:String>
                                    <System:String>bt.470m</System:String>
                                    <System:String>bt.601-525</System:String>
                                    <System:String>bt.601-625</System:String>
                                    <System:String>bt.709</System:String>
                                    <System:String>bt.2020</System:String>
                                    <System:String>apple</System:String>
                                    <System:String>adobe</System:String>
                                    <System:String>prophoto</System:String>
                                    <System:String>cie1931</System:String>
                                    <System:String>dci-p3</System:String>
                                    <System:String>v-gamut</System:String>
                                    <System:String>s-gamut</System:String>
                                </ComboBox>

                                <!-- Transfer Characteristics -->
                                <Label Content="Characteristics" 
                                       HorizontalAlignment="Left"
                                       Margin="10,257,0,0" 
                                       Padding="0, 0, 0, 6"
                                       VerticalAlignment="Top"
                                       Width="83"
                                       ToolTipService.InitialShowDelay="100" 
                                       ToolTipService.ShowOnDisabled="True" 
                                       ToolTip="Specifies the transfer characteristics (gamma) of the display. Video colors will be adjusted to this curve when ICC color management is not being used."
                                       Style="{DynamicResource LabelStyle}"/>
                                <ComboBox x:Name="cboTransferCharacteristics"
                                          Margin="0,254,14,0" 
                                          VerticalAlignment="Top"
                                          Style="{DynamicResource ComboBoxStyle}"
                                          ItemContainerStyle="{DynamicResource ComboBoxItemStyle}" 
                                          HorizontalAlignment="Right"
                                          Width="103">
                                    <System:String>default</System:String>
                                    <System:String>auto</System:String>
                                    <System:String>bt.1886</System:String>
                                    <System:String>srgb</System:String>
                                    <System:String>linear</System:String>
                                    <System:String>gamma1.8</System:String>
                                    <System:String>gamma2.2</System:String>
                                    <System:String>gamma2.8</System:String>
                                    <System:String>prophoto</System:String>
                                    <System:String>pq</System:String>
                                    <System:String>hlg</System:String>
                                    <System:String>v-log</System:String>
                                    <System:String>s-log1</System:String>
                                    <System:String>s-log2</System:String>
                                </ComboBox>

                                <!-- Color Space -->
                                <Label Content="Color Space" 
                                       HorizontalAlignment="Left"
                                       Margin="10,286,0,0" 
                                       Padding="0,0,0,6" 
                                       VerticalAlignment="Top"
                                       Width="75"
                                       ToolTipService.InitialShowDelay="100" 
                                       ToolTipService.ShowOnDisabled="True" 
                                       ToolTip="Restricts the color space for the next filter without doing any conversion. Use together with the scale filter for a real conversion."
                                       Style="{DynamicResource LabelStyle}"/>
                                <ComboBox x:Name="cboColorSpace" 
                                          Margin="0,283,14,0" 
                                          VerticalAlignment="Top"
                                          Style="{DynamicResource ComboBoxStyle}"
                                          ItemContainerStyle="{DynamicResource ComboBoxItemStyle}" 
                                          HorizontalAlignment="Right"
                                          Width="103">
                                    <System:String>default</System:String>
                                    <System:String>bt.601</System:String>
                                    <System:String>bt.709</System:String>
                                    <System:String>bt.2020-ncl</System:String>
                                    <System:String>bt.2020-cl</System:String>
                                    <System:String>mpte-240m</System:String>
                                </ComboBox>

                                <!-- Color Range -->
                                <Label Content="Color Range"
                                       HorizontalAlignment="Left"
                                       Margin="10,315,0,0"
                                       Padding="0,0,0,6" 
                                       VerticalAlignment="Top"
                                       Width="75"
                                       ToolTipService.InitialShowDelay="100" 
                                       ToolTipService.ShowOnDisabled="True" 
                                       ToolTip="RGB color levels used with YUV to RGB conversion. Normally, output devices such as PC monitors use full range color levels. However, some TVs and video monitors expect studio RGB levels. Providing full range output to a device expecting studio level input results in crushed blacks and whites, the reverse in dim gray blacks and dim whites."
                                       Style="{DynamicResource LabelStyle}"/>
                                <ComboBox x:Name="cboColorRange"
                                          Margin="0,312,14,0"
                                          VerticalAlignment="Top"
                                          Style="{DynamicResource ComboBoxStyle}"
                                          ItemContainerStyle="{DynamicResource ComboBoxItemStyle}" 
                                          HorizontalAlignment="Right"
                                          Width="103">
                                    <System:String>default</System:String>
                                    <System:String>limited</System:String>
                                    <System:String>full</System:String>
                                </ComboBox>

                                <!-- Deinterlace -->
                                <Label Content="Deinterlace" 
                                       HorizontalAlignment="Left"
                                       Margin="10,344,0,0" 
                                       Padding="0,0,0,6" 
                                       VerticalAlignment="Top" 
                                       Width="75"
                                       ToolTipService.InitialShowDelay="100" 
                                       ToolTipService.ShowOnDisabled="True" 
                                       ToolTip="Enable or disable interlacing (default: auto, which usually means no). Interlaced video shows ugly comb-like artifacts, which are visible on fast movement. Enabling this typically inserts the yadif video filter in order to deinterlace the video, or lets the video output apply deinterlacing if supported."
                                       Style="{DynamicResource LabelStyle}"/>
                                <ComboBox x:Name="cboDeinterlace" 
                                          HorizontalAlignment="Right"
                                          Margin="0,341,14,0" 
                                          VerticalAlignment="Top" 
                                          Width="103"
                                          Style="{DynamicResource ComboBoxStyle}"
                                          ItemContainerStyle="{DynamicResource ComboBoxItemStyle}">
                                    <System:String>default</System:String>
                                    <System:String>yes</System:String>
                                    <System:String>no</System:String>
                                </ComboBox>

                                <!-- Interpolation -->
                                <Label Content="Interpolation" 
                                       HorizontalAlignment="Left"
                                       Margin="10,373,0,0" 
                                       Padding="0,0,0,6" 
                                       VerticalAlignment="Top" 
                                       Width="75"
                                       ToolTipService.InitialShowDelay="100" 
                                       ToolTipService.ShowOnDisabled="True" 
                                       ToolTip="Reduce stuttering caused by mismatches in the video fps and display refresh rate (also known as judder)."
                                       Style="{DynamicResource LabelStyle}"/>
                                <ComboBox x:Name="cboInterpolation" 
                                          HorizontalAlignment="Right"
                                          Margin="0,370,14,0" 
                                          VerticalAlignment="Top" 
                                          Width="103"
                                          Style="{DynamicResource ComboBoxStyle}"
                                          ItemContainerStyle="{DynamicResource ComboBoxItemStyle}" 
                                          SelectionChanged="cboInterpolation_SelectionChanged">
                                    <System:String>default</System:String>
                                    <System:String>yes</System:String>
                                    <System:String>no</System:String>
                                </ComboBox>

                                <!-- Vsync -->
                                <Label Content="Video Sync" 
                                       HorizontalAlignment="Left"
                                       Margin="10,402,0,0" 
                                       Padding="0,0,0,6" 
                                       VerticalAlignment="Top" 
                                       Width="75"
                                       ToolTipService.InitialShowDelay="100" 
                                       ToolTipService.ShowOnDisabled="True" 
                                       ToolTip="How the player synchronizes audio and video. If you use this option, you usually want to set it to display-resample to enable a timing mode that tries to not skip or repeat frames when for example playing 24fps video on a 24Hz screen."
                                       Style="{DynamicResource LabelStyle}"/>
                                <ComboBox x:Name="cboVideoSync" 
                                          HorizontalAlignment="Right"
                                          Margin="0,399,14,0" 
                                          VerticalAlignment="Top"
                                          Width="103"
                                          Style="{DynamicResource ComboBoxStyle}"
                                          ItemContainerStyle="{DynamicResource ComboBoxItemStyle}">
                                    <System:String>default</System:String>
                                    <System:String>off</System:String>
                                    <System:String>display-resample</System:String>
                                    <System:String>display-resample-vdrop</System:String>
                                    <System:String>display-resample-desync</System:String>
                                    <System:String>display-vdrop</System:String>
                                    <System:String>display-adrop</System:String>
                                    <System:String>display-desync</System:String>
                                    <System:String>desync</System:String>
                                    <System:String>audio</System:String>
                                </ComboBox>

                                <!-- Framedrop -->
                                <Label Content="Framedrop" 
                                       HorizontalAlignment="Left" 
                                       Margin="10,431,0,0" 
                                       Padding="0,0,0,6" 
                                       VerticalAlignment="Top"
                                       Width="75"
                                       ToolTipService.InitialShowDelay="100" 
                                       ToolTipService.ShowOnDisabled="True" 
                                       ToolTip="Skip displaying some frames to maintain A/V sync on slow systems, or playing high framerate video on video outputs that have an upper framerate limit."
                                       Style="{DynamicResource LabelStyle}"/>
                                <ComboBox x:Name="cboFramedrop"
                                          HorizontalAlignment="Right"
                                          Margin="0,428,14,0"
                                          VerticalAlignment="Top"
                                          Width="103"
                                          Style="{DynamicResource ComboBoxStyle}"
                                          ItemContainerStyle="{DynamicResource ComboBoxItemStyle}">
                                    <System:String>default</System:String>
                                    <System:String>no</System:String>
                                    <System:String>vo</System:String>
                                    <System:String>decoder</System:String>
                                    <System:String>decoder+vo</System:String>
                                </ComboBox>


                                <!--/////////////////////////////////////
                                    Image
                                /////////////////////////////////////-->
                                <Label Content="Image" 
                                       HorizontalAlignment="Left" 
                                       Margin="10,472,0,0"
                                       Padding="0,0,0,6" 
                                       VerticalAlignment="Top" 
                                       Width="75" 
                                       FontWeight="Bold"
                                       Style="{DynamicResource LabelTitleStyle}"/>

                                <!-- Brightness-->
                                <Label Content="Brightness" 
                                        HorizontalAlignment="Left"
                                        Margin="10,502,0,0" 
                                        Padding="0,0,0,6" 
                                        VerticalAlignment="Top" 
                                        Width="75"
                                        ToolTipService.InitialShowDelay="100" 
                                        ToolTipService.ShowOnDisabled="True" 
                                        ToolTip="Adjust the brightness of the video signal (default: 0). Not supported by all video output drivers."
                                        Style="{DynamicResource LabelStyle}"/>
                                <Slider x:Name="slBrightness" 
                                        HorizontalAlignment="Right"
                                        Margin="0,500,52,0" 
                                        VerticalAlignment="Top" 
                                        Width="65"
                                        Minimum="-100"
                                        Maximum="100" 
                                        IsSnapToTickEnabled="True"
                                        IsMoveToPointEnabled="True"
                                        MouseDoubleClick="slBrightness_MouseDoubleClick"
                                        Style="{DynamicResource SliderStyle}"/>
                                <TextBox x:Name="tbxBrightness"
                                        Text="{Binding Value, ElementName=slBrightness, UpdateSourceTrigger=PropertyChanged}"
                                        Height="22" 
                                        TextWrapping="Wrap" 
                                        Margin="0,499,14,0"
                                        Padding="1,1,0,0"
                                        HorizontalAlignment="Right"
                                        Width="33" 
                                        VerticalAlignment="Top"
                                        Style="{DynamicResource TextBoxStyle}"/>

                                <!-- Contrast-->
                                <Label Content="Contrast" 
                                        HorizontalAlignment="Left"
                                        Margin="10,531,0,0" 
                                        Padding="0,0,0,6" 
                                        VerticalAlignment="Top" 
                                        Width="75"
                                        ToolTipService.InitialShowDelay="100" 
                                        ToolTipService.ShowOnDisabled="True" 
                                        ToolTip="Adjust the contrast of the video signal (default: 0). Not supported by all video output drivers."
                                        Style="{DynamicResource LabelStyle}"/>
                                <Slider x:Name="slContrast" 
                                        HorizontalAlignment="Right"
                                        Margin="0,529,52,0" 
                                        VerticalAlignment="Top" 
                                        Width="65"
                                        Minimum="-100"
                                        Maximum="100" 
                                        IsSnapToTickEnabled="True"
                                        IsMoveToPointEnabled="True"
                                        MouseDoubleClick="slContrast_MouseDoubleClick"
                                        Style="{DynamicResource SliderStyle}"/>
                                <TextBox x:Name="tbxContrast"
                                        Text="{Binding Value, ElementName=slContrast, UpdateSourceTrigger=PropertyChanged}"
                                        Height="22" 
                                        TextWrapping="Wrap" 
                                        Margin="0,528,14,0"
                                        Padding="1,1,0,0"
                                        HorizontalAlignment="Right"
                                        Width="33" 
                                        VerticalAlignment="Top"
                                        Style="{DynamicResource TextBoxStyle}"/>

                                <!-- Hue -->
                                <Label Content="Hue" 
                                        HorizontalAlignment="Left"
                                        Margin="10,560,0,0" 
                                        Padding="0,0,0,6" 
                                        VerticalAlignment="Top" 
                                        Width="75"
                                        ToolTipService.InitialShowDelay="100" 
                                        ToolTipService.ShowOnDisabled="True" 
                                        ToolTip="Adjust the hue of the video signal (default: 0). You can get a colored negative of the image with this option. Not supported by all video output drivers."
                                        Style="{DynamicResource LabelStyle}"/>
                                <Slider x:Name="slHue" 
                                        HorizontalAlignment="Right"
                                        Margin="0,558,52,0" 
                                        VerticalAlignment="Top" 
                                        Width="65"
                                        Minimum="-100"
                                        Maximum="100" 
                                        IsSnapToTickEnabled="True"
                                        IsMoveToPointEnabled="True"
                                        MouseDoubleClick="slHue_MouseDoubleClick"
                                        Style="{DynamicResource SliderStyle}"/>
                                <TextBox x:Name="tbxHue"
                                        Text="{Binding Value, ElementName=slHue, UpdateSourceTrigger=PropertyChanged}"
                                        Height="22" 
                                        TextWrapping="Wrap" 
                                        Margin="0,557,14,0"
                                        Padding="1,1,0,0"
                                        HorizontalAlignment="Right"
                                        Width="33" 
                                        VerticalAlignment="Top"
                                        Style="{DynamicResource TextBoxStyle}"/>

                                <!-- Saturation-->
                                <Label Content="Saturation" 
                                        HorizontalAlignment="Left"
                                        Margin="10,589,0,0" 
                                        Padding="0,0,0,6" 
                                        VerticalAlignment="Top" 
                                        Width="75"
                                        ToolTipService.InitialShowDelay="100" 
                                        ToolTipService.ShowOnDisabled="True" 
                                        ToolTip="Adjust the saturation of the video signal (default: 0). You can get grayscale output with this option. Not supported by all video output drivers."
                                        Style="{DynamicResource LabelStyle}"/>
                                <Slider x:Name="slSaturation" 

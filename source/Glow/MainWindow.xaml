<Window x:Class="Glow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:System="clr-namespace:System;assembly=mscorlib" 
        xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero"
        xmlns:my="clr-namespace:Glow"
        xmlns:settings="clr-namespace:Glow.Properties"
        
        Closing="MainWindow_Closing" 
        UseLayoutRounding="True"
        Width="775" Height="400"
        Top="{Binding Top, Source={x:Static settings:Settings.Default}, Mode=TwoWay}"
        Left="{Binding Left, Source={x:Static settings:Settings.Default}, Mode=TwoWay}"
        Title="{Binding TitleVersion, RelativeSource={RelativeSource Mode=Self}}" 
        >
    <Grid>
        <Grid Margin="0,0,-1,0">
            <!-- Main Tabs -->
            <TabControl Margin="0,10,18,59" HorizontalAlignment="Right" Width="230">

                <!-- Video Tab -->
                <TabItem Header="Video" >
                    <Grid Background="#FFE5E5E5">
                        <ScrollViewer Margin="0,0,0,0">
                            <Grid Margin="0,0,0,30">

                                <!-- Driver -->
                                <Label Content="Driver" HorizontalAlignment="Left" Margin="10,10,0,0" Padding="0, 0, 0, 6" VerticalAlignment="Top" Width="75"/>
                                <ComboBox x:Name="cboVideoDriver" HorizontalAlignment="Left" Margin="93,10,0,0" VerticalAlignment="Top" Width="100">
                                    <System:String>opengl</System:String>
                                    <System:String>opengl-hq</System:String>
                                    <System:String>direct3d</System:String>
                                    <System:String>sdl</System:String>
                                    <System:String>vaapi</System:String>
                                </ComboBox>

                                <!-- Hardware Decoder -->
                                <Label Content="HW Decoder" HorizontalAlignment="Left" Margin="10,37,0,0" Padding="0, 0, 0, 6" VerticalAlignment="Top" Width="75"/>
                                <ComboBox x:Name="cboHWDecoder" HorizontalAlignment="Left" Margin="93,37,0,0" VerticalAlignment="Top" Width="100">
                                    <System:String>no</System:String>
                                    <System:String>yes</System:String>
                                    <System:String>auto-copy</System:String>
                                    <System:String>dxva2</System:String>
                                    <System:String>dxva2-copy</System:String>
                                    <System:String>d3d11va</System:String>
                                    <System:String>d3d11va-copy</System:String>
                                    <System:String>cuda</System:String>
                                    <System:String>cuda-copy</System:String>
                                    <System:String>crystalhd</System:String>
                                </ComboBox>

                                <!-- Deinterlace -->
                                <Label Content="Deinterlace" HorizontalAlignment="Left" Margin="10,64,0,0" Padding="0, 0, 0, 6" VerticalAlignment="Top" Width="75"/>
                                <ComboBox x:Name="cboDeinterlace" HorizontalAlignment="Left" Margin="93,64,0,0" VerticalAlignment="Top" Width="100">
                                    <System:String>auto</System:String>
                                    <System:String>yes</System:String>
                                    <System:String>no</System:String>
                                </ComboBox>

                                <!-- Vsync -->
                                <Label Content="Video Sync" HorizontalAlignment="Left" Margin="10,91,0,0" Padding="0, 0, 0, 6" VerticalAlignment="Top" Width="75"/>
                                <ComboBox x:Name="cboVideoSync" HorizontalAlignment="Left" Margin="93,91,0,0" VerticalAlignment="Top" Width="100">
                                    <System:String>off</System:String>
                                    <System:String>display-resample</System:String>
                                    <System:String>display-resample-vdrop</System:String>
                                    <System:String>display-resample-desync</System:String>
                                    <System:String>display-vdrop</System:String>
                                    <System:String>display-adrop</System:String>
                                    <System:String>display-desync</System:String>
                                    <System:String>desync</System:String>
                                    <System:String>audio</System:String>
                                </ComboBox>

                                <!-- Framedrop -->
                                <Label Content="Framedrop" HorizontalAlignment="Left" Margin="10,118,0,0" Padding="0, 0, 0, 6" VerticalAlignment="Top" Width="75"/>
                                <ComboBox x:Name="cboFramedrop" HorizontalAlignment="Left" Margin="93,118,0,0" VerticalAlignment="Top" Width="100">
                                    <System:String>no</System:String>
                                    <System:String>vo</System:String>
                                    <System:String>decoder</System:String>
                                    <System:String>decoder+vo</System:String>
                                </ComboBox>


                                <!-- Image -->
                                <Label Content="Image" HorizontalAlignment="Left" Margin="10,153,0,0" Padding="0, 0, 0, 6" VerticalAlignment="Top" Width="75" FontWeight="Bold"/>

                                <!-- Color Space -->
                                <Label Content="Color Space" HorizontalAlignment="Left" Margin="10,180,0,0" Padding="0, 0, 0, 6" VerticalAlignment="Top" Width="75"/>
                                <ComboBox x:Name="cboColorSpace" HorizontalAlignment="Left" Margin="93,180,0,0" VerticalAlignment="Top" Width="100">
                                    <System:String>auto</System:String>
                                    <System:String>bt.601</System:String>
                                    <System:String>bt.709</System:String>
                                    <System:String>bt.2020-ncl</System:String>
                                    <System:String>bt.2020-cl</System:String>
                                    <System:String>mpte-240m</System:String>
                                </ComboBox>

                                <!-- Color Range -->
                                <Label Content="Color Range" HorizontalAlignment="Left" Margin="10,207,0,0" Padding="0, 0, 0, 6" VerticalAlignment="Top" Width="75"/>
                                <ComboBox x:Name="cboColorRange" HorizontalAlignment="Left" Margin="93,207,0,0" VerticalAlignment="Top" Width="100">
                                    <System:String>auto</System:String>
                                    <System:String>limited</System:String>
                                    <System:String>full</System:String>
                                </ComboBox>

                                <!-- Gamma -->
                                <Label Content="Gamma" HorizontalAlignment="Left" Margin="10,234,0,0" Padding="0, 0, 0, 6" VerticalAlignment="Top" Width="75"/>
                                <ComboBox x:Name="cboGamma" HorizontalAlignment="Left" Margin="93,234,0,0" VerticalAlignment="Top" Width="100">
                                    <System:String>auto</System:String>
                                    <System:String>bt.1886</System:String>
                                    <System:String>srgb</System:String>
                                    <System:String>linear</System:String>
                                    <System:String>gamma1.8</System:String>
                                    <System:String>gamma2.2</System:String>
                                    <System:String>gamma2.8</System:String>
                                    <System:String>prophoto</System:String>
                                    <System:String>pq</System:String>
                                    <System:String>hlg</System:String>
                                    <System:String>v-log</System:String>
                                    <System:String>s-log1</System:String>
                                    <System:String>s-log2</System:String>
                                </ComboBox>



                                <!-- Dithering -->
                                <Label Content="Dither" HorizontalAlignment="Left" Margin="10,261,0,0" Padding="0, 0, 0, 6" VerticalAlignment="Top" Width="75"/>
                                <ComboBox x:Name="cboDither" HorizontalAlignment="Left" Margin="93,261,0,0" VerticalAlignment="Top" Width="100">
                                    <System:String>no</System:String>
                                    <System:String>auto</System:String>
                                    <System:String>8</System:String>
                                </ComboBox>

                                <!-- Deband -->
                                <Label Content="Deband" HorizontalAlignment="Left" Margin="10,288,0,0" Padding="0, 0, 0, 6" VerticalAlignment="Top" Width="75"/>
                                <ComboBox x:Name="cboDeband" HorizontalAlignment="Left" Margin="93,288,0,0" VerticalAlignment="Top" Width="100" SelectionChanged="cboDeband_SelectionChanged">
                                    <System:String>yes</System:String>
                                    <System:String>no</System:String>
                                </ComboBox>

                                <!-- Deband Grain -->
                                <Label Content="Deband Grain" HorizontalAlignment="Left" Margin="10,315,0,0" Padding="0, 0, 0, 6" VerticalAlignment="Top" Width="75"/>
                                <TextBox x:Name="tbxDebandGrain" HorizontalAlignment="Left" Margin="93,315,0,0" VerticalAlignment="Top" Width="100" Height="22">
                                </TextBox>


                                <!-- Scaling -->
                                <Label Content="Scaling" HorizontalAlignment="Left" Margin="10,350,0,0" Padding="0, 0, 0, 6" VerticalAlignment="Top" Width="75" FontWeight="Bold"/>

                                <!-- Scale -->
                                <Label Content="Scale" HorizontalAlignment="Left" Margin="10,377,0,0" Padding="0, 0, 0, 6" VerticalAlignment="Top" Width="75"/>
                                <ComboBox x:Name="cboScale" HorizontalAlignment="Left" Margin="93,377,0,0" VerticalAlignment="Top" Width="100">
                                    <System:String>nearest</System:String>
                                    <System:String>linear</System:String>
                                    <System:String>bilinear</System:String>
                                    <System:String>bicubic</System:String>
                                    <System:String>gaussian</System:String>
                                    <System:String>lanczos</System:String>
                                    <System:String>ewa_lanczos</System:String>
                                    <System:String>ewa_lanczossharp</System:String>
                                    <System:String>ewa_lanczossoft</System:String>
                                    <System:String>robidoux</System:String>
                                    <System:String>robidouxsharp</System:String>
                                    <System:String>ewa_ginseng</System:String>
                                    <System:String>ewa_hanning</System:String>
                                    <System:String>mitchell</System:String>
                                    <System:String>catmull_rom</System:String>
                                    <System:String>spline16</System:String>
                                    <System:String>spline36</System:String>
                                    <System:String>spline64</System:String>
                                    <System:String>oversample</System:String>
                                </ComboBox>

                                <!-- Chroma Scale -->
                                <Label Content="Chroma" HorizontalAlignment="Left" Margin="10,404,0,0" Padding="0, 0, 0, 6" VerticalAlignment="Top" Width="75"/>
                                <ComboBox x:Name="cboChromaScale" HorizontalAlignment="Left" Margin="93,404,0,0" VerticalAlignment="Top" Width="100">
                                    <System:String>nearest</System:String>
                                    <System:String>linear</System:String>
                                    <System:String>bilinear</System:String>
                                    <System:String>bicubic</System:String>
                                    <System:String>gaussian</System:String>
                                    <System:String>lanczos</System:String>
                                    <System:String>ewa_lanczos</System:String>
                                    <System:String>ewa_lanczossharp</System:String>
                                    <System:String>ewa_lanczossoft</System:String>
                                    <System:String>robidoux</System:String>
                                    <System:String>robidouxsharp</System:String>
                                    <System:String>ewa_ginseng</System:String>
                                    <System:String>ewa_hanning</System:String>
                                    <System:String>mitchell</System:String>
                                    <System:String>catmull_rom</System:String>
                                    <System:String>spline16</System:String>
                                    <System:String>spline36</System:String>
                                    <System:String>spline64</System:String>
                                    <System:String>oversample</System:String>
                                </ComboBox>

                                <!-- Downscale -->
                                <Label Content="Downscale" HorizontalAlignment="Left" Margin="10,431,0,0" Padding="0, 0, 0, 6" VerticalAlignment="Top" Width="75"/>
                                <ComboBox x:Name="cboDownscale" HorizontalAlignment="Left" Margin="93,431,0,0" VerticalAlignment="Top" Width="100">
                                    <System:String>nearest</System:String>
                                    <System:String>linear</System:String>
                                    <System:String>bilinear</System:String>
                                    <System:String>bicubic</System:String>
                                    <System:String>gaussian</System:String>
                                    <System:String>lanczos</System:String>
                                    <System:String>ewa_lanczos</System:String>
                                    <System:String>ewa_lanczossharp</System:String>
                                    <System:String>ewa_lanczossoft</System:String>
                                    <System:String>robidoux</System:String>
                                    <System:String>robidouxsharp</System:String>
                                    <System:String>ewa_ginseng</System:String>
                                    <System:String>ewa_hanning</System:String>
                                    <System:String>mitchell</System:String>
                                    <System:String>catmull_rom</System:String>
                                    <System:String>spline16</System:String>
                                    <System:String>spline36</System:String>
                                    <System:String>spline64</System:String>
                                    <System:String>oversample</System:String>
                                </ComboBox>

                                <!-- Antiring -->
                                <Label Content="Antiring" HorizontalAlignment="Left" Margin="10,458,0,0" Padding="0, 0, 0, 6" VerticalAlignment="Top" Width="75"/>
                                <ComboBox x:Name="cboAntiring" HorizontalAlignment="Left" Margin="93,458,0,0" VerticalAlignment="Top" Width="100">
                                    <System:String>yes</System:String>
                                    <System:String>no</System:String>
                                </ComboBox>

                            </Grid>
                        </ScrollViewer>
                    </Grid>
                </TabItem>

                <!-- Audio Tab -->
                <TabItem Header="Audio"  >
                    <Grid Background="#FFE5E5E5">
                        <ScrollViewer Margin="0,0,0,0">
                            <Grid Margin="0,0,0,20">

                                <!-- Driver -->
                                <Label Content="Driver" HorizontalAlignment="Left" Margin="10,10,0,0" Padding="0, 0, 0, 6" VerticalAlignment="Top" Width="75"/>
                                <ComboBox x:Name="cboAudioDriver" HorizontalAlignment="Left" Margin="93,10,0,0" VerticalAlignment="Top" Width="100">
                                    <System:String>wasapi</System:String>
                                    <System:String>oss</System:String>
                                    <System:String>jack</System:String>
                                    <System:String>openal</System:String>
                                    <System:String>pulse</System:String>
                                    <System:String>sdl</System:String>
                                    <System:String>pcm</System:String>
                                    <System:String>rsound</System:String>
                                    <System:String>null</System:String>
                                </ComboBox>

                                <!-- Load Audio Files -->
                                <Label Content="Load Files" HorizontalAlignment="Left" Margin="10,37,0,0" Padding="0, 0, 0, 6" VerticalAlignment="Top" Width="75"/>
                                <ComboBox x:Name="cboAudioLoadFiles" HorizontalAlignment="Left" Margin="93,37,0,0" VerticalAlignment="Top" Width="100">
                                    <System:String>no</System:String>
                                    <System:String>exact</System:String>
                                    <System:String>fuzzy</System:String>
                                    <System:String>all</System:String>
                                </ComboBox>

                                <!-- Channels -->
                                <Label Content="Channels" HorizontalAlignment="Left" Margin="10,64,0,0" Padding="0, 0, 0, 6" VerticalAlignment="Top" Width="75"/>
                                <ComboBox x:Name="cboChannels" HorizontalAlignment="Left" Margin="93,64,0,0" VerticalAlignment="Top" Width="100">
                                    <System:String>auto-safe</System:String>
                                    <System:String>auto</System:String>
                                    <System:String>stereo</System:String>
                                    <System:String>5.1</System:String>
                                    <System:String>7.1</System:String>
                                </ComboBox>

                                <!-- Volume -->
                                <Label Content="Volume" HorizontalAlignment="Left" Margin="10,91,0,0" Padding="0, 0, 0, 6" VerticalAlignment="Top" Width="75"/>

                                <Slider x:Name="slVolume" 
                                        HorizontalAlignment="Right"
                                        Margin="0,92,48,0" 
                                        VerticalAlignment="Top" 
                                        Width="66"
                                        Maximum="100" 
                                        IsSnapToTickEnabled="True"
                                        />

                                <TextBox x:Name="tbxVolume"
                                         Text="{Binding ElementName=slVolume, Path=Value, UpdateSourceTrigger=PropertyChanged}"
                                         Height="22" 
                                         TextWrapping="Wrap" 
                                         Margin="0,91,14,0" HorizontalAlignment="Right" Width="29" VerticalAlignment="Top"/>

                                <!-- Volume -->
                                <Label Content="Volume Max" HorizontalAlignment="Left" Margin="10,118,0,0" Padding="0, 0, 0, 6" VerticalAlignment="Top" Width="75"/>

                                <Slider x:Name="slVolumeMax" 
                                    HorizontalAlignment="Right"
                                    Margin="0,119,48,0" 
                                    VerticalAlignment="Top" 
                                    Width="66"
                                    Maximum="200" 
                                    IsSnapToTickEnabled="True"
                                        />
                                <TextBox x:Name="tbxVolumeMax"
                                    Text="{Binding Value, ElementName=slVolumeMax, UpdateSourceTrigger=PropertyChanged}"
                                    Height="22" 
                                    TextWrapping="Wrap" 
                                    Margin="0,118,14,0" HorizontalAlignment="Right" Width="29" VerticalAlignment="Top"/>

                                <!-- Soft Volume -->
                                <Label Content="Soft Volume" HorizontalAlignment="Left" Margin="10,145,0,0" Padding="0, 0, 0, 6" VerticalAlignment="Top" Width="75"/>
                                <ComboBox x:Name="cboSoftVolume" HorizontalAlignment="Left" Margin="93,145,0,0" VerticalAlignment="Top" Width="100">
                                    <System:String>yes</System:String>
                                    <System:String>no</System:String>
                                </ComboBox>

                                <!-- Normalize -->
                                <Label Content="Normalize" HorizontalAlignment="Left" Margin="10,199,0,0" Padding="0, 0, 0, 6" VerticalAlignment="Top" Width="75"/>
                                <ComboBox x:Name="cboNormalize" HorizontalAlignment="Left" Margin="93,199,0,0" VerticalAlignment="Top" Width="100">
                                    <System:String>yes</System:String>
                                    <System:String>no</System:String>
                                </ComboBox>

                                <!-- Scale Tempo -->
                                <Label Content="Scale Tempo" HorizontalAlignment="Left" Margin="10,226,0,0" Padding="0, 0, 0, 6" VerticalAlignment="Top" Width="75"/>
                                <ComboBox x:Name="cboScaleTempo" HorizontalAlignment="Left" Margin="93,226,0,0" VerticalAlignment="Top" Width="100">
                                    <System:String>yes</System:String>
                                    <System:String>no</System:String>
                                </ComboBox>


                                <!-- Audio Languages -->
                                <Label Content="Languages" HorizontalAlignment="Left" Margin="10,259,0,0" Padding="0, 0, 0, 6" VerticalAlignment="Top" Width="75"/>

                                <ListView x:Name="listViewAudioLanguages" 
                                          HorizontalAlignment="Left" 
                                          Height="103" 
                                          Margin="10,283,0,0"
                                          VerticalAlignment="Top"
                                          Width="155"
                                          BorderThickness="0"
                                          ItemsSource="{Binding AudioLanguageItems}"
                                          SelectionChanged="listViewAudioLanguages_SelectionChanged">

                                    <ListView.Resources>
                                        <Style TargetType="{x:Type GridViewColumnHeader}">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </Style>
                                    </ListView.Resources>

                                    <ListView.ItemContainerStyle>
                                        <Style TargetType="{x:Type ListViewItem}">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type ListViewItem}">
                                                        <Border CornerRadius="2" SnapsToDevicePixels="True"  
                                                                    BorderThickness="{TemplateBinding BorderThickness}"   
                                                                    BorderBrush="{TemplateBinding BorderBrush}"   
                                                                    Background="{TemplateBinding Background}">

                                                            <Border Name="InnerBorder" CornerRadius="1" BorderThickness="1">
                                                                <Grid>
                                                                    <Grid.RowDefinitions>
                                                                        <RowDefinition MaxHeight="11" />
                                                                        <RowDefinition />
                                                                    </Grid.RowDefinitions>

                                                                    <Rectangle Name="UpperHighlight" Visibility="Collapsed" Fill="#75FFFFFF" />
                                                                    <GridViewRowPresenter Grid.RowSpan="2"   
                                                                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"   
                                                                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                                                </Grid>
                                                            </Border>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#FFE6E6E6" />
                                                                <Setter TargetName="UpperHighlight" Property="Visibility" Value="Hidden" />
                                                            </Trigger>
                                                            <Trigger Property="IsEnabled" Value="False">
                                                                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" />
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ListView.ItemContainerStyle>

                                    <!-- List Checkboxes -->
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn>
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <CheckBox Tag="{Binding ItemCore}" 
                                                                  IsChecked="{Binding IsSelected, RelativeSource={RelativeSource AncestorType={x:Type ListViewItem}}}" />
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn>
                                                <GridViewColumn/>
                                            </GridViewColumn>
                                        </GridView>
                                    </ListView.View>
                                </ListView>

                                <!-- Item Up -->
                                <Button x:Name="buttonAudioLanguageUp" VerticalAlignment="Top" Height="22" Cursor="Hand" Click="buttonAudioLanguageUp_Click" Margin="0,283,14,0" HorizontalAlignment="Right" Width="22">
                                    <TextBlock Text="^" Margin="0,0,0,0"/>
                                </Button>
                                <!-- Item Down -->
                                <Button x:Name="buttonAudioLanguageDown" HorizontalAlignment="Right" VerticalAlignment="Top" Width="22" Height="22" Cursor="Hand" Click="buttonAudioLanguageDown_Click" Margin="0,310,14,0">
                                    <TextBlock Text="v" Margin="0,0,0,0"/>
                                </Button>
                                <!-- Select All -->
                                <Button x:Name="buttonAudioLanguageSelectAll" HorizontalAlignment="Right" VerticalAlignment="Top" Width="22" Height="22" Cursor="Hand" Click="buttonAudioLanguageSelectAll_Click" Margin="0,337,14,0">
                                    <TextBlock Text="+" Margin="0,0,0,0"/>
                                </Button>
                                <!-- Deselect All -->
                                <Button x:Name="buttonAudioLanguageDeselectAll" HorizontalAlignment="Right" VerticalAlignment="Top" Width="22" Height="22" Cursor="Hand" Click="buttonAudioLanguageDeselectAll_Click" Margin="0,364,14,0">
                                    <TextBlock Text="-" Margin="0,0,0,0"/>
                                </Button>

                                <!-- Soft Volume Max -->
                                <Label Content="Soft Vol Max" HorizontalAlignment="Left" Margin="10,172,0,0" Padding="0, 0, 0, 6" VerticalAlignment="Top" Width="75"/>

                                <Slider x:Name="slSoftVolumeMax" 
                                    HorizontalAlignment="Right"
                                    Margin="0,173,48,0" 
                                    VerticalAlignment="Top" 
                                    Width="66"
                                    Maximum="200" 
                                    IsSnapToTickEnabled="True"
                                        />
                                <TextBox x:Name="tbxSoftVolumeMax"
                                    Text="{Binding Value, ElementName=slSoftVolumeMax, UpdateSourceTrigger=PropertyChanged}"
                                    Height="22" 
                                    TextWrapping="Wrap" 
                                    Margin="0,172,14,0" HorizontalAlignment="Right" Width="29" VerticalAlignment="Top"/>

                            </Grid>
                        </ScrollViewer>
                    </Grid>
                </TabItem>

                <!-- Subtitle Tab -->
                <TabItem Header="Subtitle"  >
                    <Grid Background="#FFE5E5E5">
                        <ScrollViewer Margin="0,0,0,0">
                            <Grid Margin="0,0,0,20">

                                <!-- Subtitles -->
                                <Label Content="Subtitles" HorizontalAlignment="Left" Margin="10,10,0,0" Padding="0, 0, 0, 6" VerticalAlignment="Top" Width="75"/>
                                <ComboBox x:Name="cboSubtitles" HorizontalAlignment="Left" Margin="93,10,0,0" VerticalAlignment="Top" Width="100">
                                    <System:String>yes</System:String>
                                    <System:String>no</System:String>
                                </ComboBox>

                                <!-- Subtitles Load Files -->
                                <Label Content="Load Files" HorizontalAlignment="Left" Margin="10,37,0,0" Padding="0, 0, 0, 6" VerticalAlignment="Top" Width="75"/>
                                <ComboBox x:Name="cboSubtitlesLoadFiles" HorizontalAlignment="Left" Margin="93,37,0,0" VerticalAlignment="Top" Width="100">
                                    <System:String>no</System:String>
                                    <System:String>exact</System:String>
                                    <System:String>fuzzy</System:String>
                                    <System:String>all</System:String>
                                </ComboBox>

                                <!-- Position -->
                                <Label Content="Position" HorizontalAlignment="Left" Margin="10,64,0,0" Padding="0, 0, 0, 6" VerticalAlignment="Top" Width="75"/>
                                <Slider x:Name="slSubtitlePosition" 
                                        HorizontalAlignment="Right"
                                        Margin="0,65,48,0" 
                                        VerticalAlignment="Top" 
                                        Width="66"
                                        Maximum="100" 
                                        IsSnapToTickEnabled="True"
                                        />

                                <TextBox x:Name="tbxSubtitlePosition"
                                         Text="{Binding ElementName=slSubtitlePosition, Path=Value, UpdateSourceTrigger=PropertyChanged}"
                                         Height="22" 
                                         TextWrapping="Wrap" 
                                         Margin="0,64,14,0" HorizontalAlignment="Right" Width="29" VerticalAlignment="Top"/>

                                <!-- Blend -->
                                <Label Content="Blend" HorizontalAlignment="Left" Margin="10,91,0,0" Padding="0, 0, 0, 6" VerticalAlignment="Top" Width="75"/>
                                <ComboBox x:Name="cboSubtitlesBlend" HorizontalAlignment="Left" Margin="93,91,0,0" VerticalAlignment="Top" Width="100">
                                    <System:String>yes</System:String>
                                    <System:String>video</System:String>
                                    <System:String>no</System:String>

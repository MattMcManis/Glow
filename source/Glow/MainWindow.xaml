					Cursor="Hand" 
					ToolTipService.InitialShowDelay="1000" 
					ToolTipService.ShowOnDisabled="True" 
					ToolTip="Configure"
					Click="buttonConfigure_Click"
					Style="{DynamicResource ButtonSmallStyle}">
                <Image Style="{DynamicResource ButtonSettings}" 
				Width="11" 
				Height="11" 
				Margin="0,-1,0,0"
				HorizontalAlignment="Center" 
				VerticalAlignment="Center"/>
            </Button>


            <Button x:Name="buttonUpdate" 
                    HorizontalAlignment="Left" 
                    Margin="68,0,0,16" 
                    VerticalAlignment="Bottom"
                    Width="22" Height="22"
                    Cursor="Hand" 
                    ToolTipService.InitialShowDelay="1000" 
                    ToolTipService.ShowOnDisabled="True" 
                    ToolTip="Check for Updates"

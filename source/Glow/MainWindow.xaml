                                       Padding="0,0,0,6" 
                                       VerticalAlignment="Top" 
                                       Width="75"
                                       Style="{DynamicResource LabelStyle}"/>
                                <TextBox x:Name="tbxDebandGrain"
                                         Margin="0,613,14,0" 
                                         VerticalAlignment="Top" 
                                         Width="103" Height="22"
                                         Style="{DynamicResource TextBoxStyle}"
                                         HorizontalAlignment="Right"/>


                                <!--/////////////////////////////////////
                                     Scaling
                                    /////////////////////////////////////-->
                                <Label Content="Scaling" 
                                       HorizontalAlignment="Left"
                                       Margin="10,685,0,0"

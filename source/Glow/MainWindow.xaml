                    Click="buttonConfigure_Click"
                    Style="{DynamicResource ButtonSmallStyle}">
                <Image Style="{DynamicResource ButtonSettings}" 
                Width="11" 
                Height="11" 
                Margin="0,-1,0,0"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"/>
            </Button>

            <!-- Update -->
            <Button x:Name="buttonUpdate" 
                    HorizontalAlignment="Left" 
                    Margin="97,0,0,16" 
                    VerticalAlignment="Bottom"
                    Width="22" Height="22"
                    Cursor="Hand" 
                    ToolTipService.InitialShowDelay="1000" 
                    ToolTipService.ShowOnDisabled="True" 
                    ToolTip="Check for Updates"
                    Click="buttonUpdate_Click"
                    Style="{DynamicResource ButtonSmallStyle}">
                <Image Style="{DynamicResource ButtonUpdate}" 
                   Width="10" 
                   Height="10" 
                   Stretch="Fill" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"/>
            </Button>

            <!-- Config Folder -->
            <Button x:Name="buttonConfigDir" 
                    HorizontalAlignment="Left" 
                    Margin="126,0,0,16" 
                    VerticalAlignment="Bottom"
                    Width="22" Height="22"
                    Cursor="Hand"
                    ToolTipService.InitialShowDelay="1000" 
                    ToolTipService.ShowOnDisabled="True" 
                    ToolTip="Open Config Folder"
                    Click="buttonConfigDir_Click"
                    Style="{DynamicResource ButtonSmallStyle}">
                <Image Style="{DynamicResource ButtonConfigFolder}" 
                   Width="11" 
                   Height="7" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"/>
            </Button>


            <!-- Copy -->
            <Button x:Name="buttonCopy" 
                    Margin="158,0,447,16" 
                    Cursor="Hand"
                    Click="buttonCopy_Click" 
                    Height="22"
                    MinWidth="75"
                    MaxWidth="75"
                    Style="{DynamicResource ButtonStyle}" 
                    VerticalAlignment="Bottom">
                <TextBlock Text="Copy" Margin="0,-2,0,0"/>
            </Button>

            <!-- Save -->
            <Button x:Name="buttonSave"
                    Margin="241,0,364,16" 
                    Cursor="Hand" 
                    Height="22"
                    MinWidth="75"
                    MaxWidth="75"
                    VerticalAlignment="Bottom"
                    Click="buttonSave_Click" 
                    Style="{DynamicResource ButtonStyle}" 
                    >
                <TextBlock Text="Save" Margin="0,-2,0,0"/>
            </Button>



            <!-- Presets -->
            <!--<Label Content="Preset" 
                   Margin="0,0,217,14"
                   Height="26"
                   VerticalAlignment="Bottom" 
                   HorizontalAlignment="Right" 
                   Width="43"
                   Style="{DynamicResource LabelStyle}"/>-->

            <ComboBox x:Name="cboProfile" 
                      ItemsSource="{Binding ProfilesItems, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      SelectedItem="{Binding ProfileSelectedItem, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      Margin="0,0,181,16"
                      Width="75" 
                      Height="22" 
                      VerticalAlignment="Bottom"
                      HorizontalAlignment="Right" 
                      ToolTipService.InitialShowDelay="1000" 
                      ToolTipService.ShowOnDisabled="True" 
                      ToolTip="Profile"
                      SelectionChanged="cboProfile_SelectionChanged"
                      Style="{DynamicResource ComboBoxStyle}"
                      ItemContainerStyle="{DynamicResource ComboBoxItemStyle}">
                <!--<System:String>Default</System:String>
                <System:String>Ultra</System:String>
                <System:String>High</System:String>
                <System:String>Medium</System:String>
                <System:String>Low</System:String>
                <System:String>Debug</System:String>-->
            </ComboBox>

            <!-- Export ini -->
            <Button x:Name="buttonExport"
                    Margin="0,0,122,16" 
                    Width="22" Height="22"
                    VerticalAlignment="Bottom" 
                    HorizontalAlignment="Right" 
                    Cursor="Hand" 
                    ToolTipService.InitialShowDelay="1000" 
                    ToolTipService.ShowOnDisabled="True" 
                    ToolTip="Save Profile"
                    Click="buttonExport_Click"
                    Style="{DynamicResource ButtonSmallStyle}">
                <Image Style="{DynamicResource ButtonExport}" 
                    Width="11" 
                    Height="11" 
                    Margin="0,-1,0,0"
                    Stretch="Fill" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"/>
            </Button>

            <!-- Export ini -->
            <Button x:Name="buttonImport" 
                    HorizontalAlignment="Right"
                    Margin="0,0,151,16" 
                    VerticalAlignment="Bottom" 
                    Width="22" Height="22"
                    Cursor="Hand" 
                    ToolTipService.InitialShowDelay="1000" 
                    ToolTipService.ShowOnDisabled="True" 
                    ToolTip="Import Profile"
                    Click="buttonImport_Click"
                    Style="{DynamicResource ButtonSmallStyle}">
                <Image Style="{DynamicResource ButtonImport}" 
                    Width="9" 
                    Height="11" 
                    Margin="0,-1,0,0"
                    Stretch="Fill" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center"/>
            </Button>

            <!-- Generate -->
            <Button x:Name="buttonGenerate" 
                    Cursor="Hand" 
                    Margin="0,0,11,16" 
                    Click="buttonGenerate_Click" 
                    Width="75"
                    Height="22" 
                    VerticalAlignment="Bottom"
                    HorizontalAlignment="Right"
                    Style="{DynamicResource ButtonStyle}">
                <TextBlock Text="Generate" Margin="0,-2,0,0"/>
            </Button>

        </Grid>


    </Grid>
</Window>

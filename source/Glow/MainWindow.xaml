                    Style="{DynamicResource ButtonSmallStyle}">
                <Image Style="{DynamicResource ButtonUpdate}" 
                   Width="10" 
                   Height="10" 
                   Stretch="Fill" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"/>
            </Button>

